{
  "name": "fullstack-project",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev:fullstack",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm ci --only=production",
    "start": "pm2-runtime ecosystem.config.js",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../mcp-server && npm install",
    "docker:build": "docker build -t flashcard-mcp .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 flashcard-mcp",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod"
  },
  "dependencies": {
    "pm2": "5.3.0"
  },
  "devDependencies": {
    "concurrently": "8.2.2"
  }
}